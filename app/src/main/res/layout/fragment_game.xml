<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameFragment" >

        <com.footballbattle.game.app.GameView
            android:id="@+id/game"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/win"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#59369734"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/winbg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/win"
                app:layout_constraintBottom_toBottomOf="@+id/imageView14"
                app:layout_constraintEnd_toEndOf="@+id/imageView14"
                app:layout_constraintStart_toStartOf="@+id/imageView14"
                app:layout_constraintTop_toTopOf="@+id/imageView14" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#59E12121"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView141"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/losebg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView151"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/lose"
                app:layout_constraintBottom_toBottomOf="@+id/imageView141"
                app:layout_constraintEnd_toEndOf="@+id/imageView141"
                app:layout_constraintStart_toStartOf="@+id/imageView141"
                app:layout_constraintTop_toTopOf="@+id/imageView141" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>